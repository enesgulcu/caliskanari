generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model Student {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String?
  name      String
  surname   String?
  age       Int?
  phone     String?
  school    String?
  class     Int?
  adress    String?
  status    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

