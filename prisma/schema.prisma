generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  role    String
  name      String
  surname   String
  age       Int?
  phone     String?
  city      String?
  town      String?
  schooltype String?
  schollName String?
  class     String?
  email     String   @unique
  password  String
  accessToken String?
  refreshToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

